<%= form_with(model: picture, local: true, multipart: true) do |form| %>
  <div class="dropzone dropzone-default dz-clickable" data-controller="dropzone">
    <%= form.file_field :file, direct_upload: true, data: { target: 'dropzone.input' } %>
    <div class="dropzone-msg dz-message">
      <h3 class="dropzone-msg-title">Dropzone</h3>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Download" %>
  </div>
<% end %>
